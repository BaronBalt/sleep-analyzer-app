<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground"
    tools:context=".ui.audio.AudioActivity">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:colorBackground"
        android:elevation="4dp">

        <TextView
            android:id="@+id/audio_screen_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/audio_analysis"
            android:textColor="@color/textColor"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical|start"
            android:padding="16dp"/>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Current dB Card -->
            <LinearLayout
                android:id="@+id/current_db_card"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:background="@color/dash_nights"
                android:padding="16dp"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/current_db_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 dB"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/current_db_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/current_noise_level"
                    android:textSize="16sp"
                    android:textColor="@color/textColor"
                    android:layout_gravity="center"
                    android:paddingTop="4dp"/>
            </LinearLayout>

            <!-- Sleep-Friendly Status Card -->
            <LinearLayout
                android:id="@+id/sleep_status_card"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:background="@color/dash_average"
                android:padding="16dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/current_db_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/sleep_status_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/sleep_status_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sleep_status"
                    android:textSize="14sp"
                    android:textColor="@color/textColor"
                    android:layout_gravity="center"
                    android:paddingTop="4dp"/>
            </LinearLayout>

            <!-- Noise History Graph Placeholder -->
            <LinearLayout
                android:id="@+id/noise_history_card"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:background="@color/dash_daily"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/sleep_status_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/noise_history_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/noise_history"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"
                    android:layout_gravity="center"/>

                <View
                    android:id="@+id/noise_graph_placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/graph_placeholder"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
